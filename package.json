{
  "name": "nothrow",
  "version": "0.1.0",
  "description": "Type-safe error handling with Result and Option types, inspired by Rust. Features generator-based error propagation using yield*.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build",
    "publish:dry": "npm publish --dry-run"
  },
  "keywords": [
    "result",
    "option",
    "either",
    "maybe",
    "error-handling",
    "functional",
    "typescript",
    "rust",
    "generator",
    "yield",
    "monad"
  ],
  "author": "Chuba-Nwene. C <chuba.dev@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chuba-cn/NoThrow.git"
  },
  "bugs": {
    "url": "https://github.com/chuba-cn/NoThrow/issues"
  },
  "homepage": "https://github.com/chuba-cn/NoThrow#readme",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vite": "^7.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
